@model PaginatedList<EmployeeDirectoryWebApplication.Models.Employee>
@{
    var currentFilter = ViewContext.HttpContext.Request.Query["searchString"];
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].ProfilePhotoBase64)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ProfilePhotoBase64"
                         alt="Фото сотрудника"
                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div>
    Страница @Model.PageIndex из @Model.TotalPages
</div>

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-searchString="@currentFilter"
   class="btn btn-default @prevDisabled">
    Назад
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-searchString="@currentFilter"
   class="btn btn-default @nextDisabled">
    Вперед
</a>
